{
  "CONFIG_PATH": "artifact/config",
  "DATA_PATH": "artifact/data",
  "LOG_PATH": "artifact/log",
  "CHECKPOINT_PATH": "artifact/checkpoint",
  "RESULT_PATH": "artifact/result",
  "MODEL_PATH": "artifact/model/",
  "ERROR_PATH": "artifact/error",

  "FROZEN_BN": false,
  "LIGHT_MODE": false,

  "AUGMENT_MODE": {
    "cutout": false,
    "enabled": true,
    "random_crop": true,
    "random_flip": true
  },
  "MIXUP_MODE": {
    "alpha": 0.2,
    "enabled": false
  },

  "DROPOUT_MODE": {
    "enabled": false,
    "rate": 0.0
  },
  "L2_MODE": {
    "enabled": true,
    "lambda": 0.0001,
    "mode": "optimizer"
  },

  "OPTIMIZER": {
    "learning_rate": 0.1,
    "momentum": 0.9,
    "type": "sgd"
  },
  "SCHEDULE_MODE": {
    "enabled": true,
    "gamma": 0.1,
    "milestones": [82, 123],
    "type": "step",
    "verbose": 1,
    "warmup_epochs": 0
  },

  "AVERAGE_MODE": {
    "enabled": false,
    "start_epoch": 150
  },
  "EARLY_STOP_MODE": {
    "enabled": false,
    "monitor": "val_accuracy",
    "patience": 20,
    "restore_best_weights": false,
    "verbose": 1
  },
  "TTA_MODE": {
    "enabled": true,
    "random_crop": true,
    "random_flip": true,
    "runs": 5
  },


  "BATCH_SIZE": 128,
  "EPOCHS_COUNT": 164
}
